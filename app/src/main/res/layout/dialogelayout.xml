<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
          android:id="@+id/cancel"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
          android:id="@+id/Done"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select year"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="10dp"/>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        android:id="@+id/chipyear"
        app:checkedChip="@+id/f"
        android:layout_marginLeft="10dp"
        app:chipSpacing="10dp"
        >
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First year"
            android:id="@+id/f"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Second year"
            android:id="@+id/s"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third year"
            android:id="@+id/t"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fourth year"
            android:id="@+id/fo"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
    </com.google.android.material.chip.ChipGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="select branch"
        android:textStyle="bold"
        android:textSize="15sp"
        android:padding="10dp"/>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:checkedChip="@+id/cs"
        android:id="@+id/chipbranch"
        app:chipSpacing="10dp"
        android:layout_marginLeft="10dp"
        >
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE"
            android:id="@+id/cs"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MECH"
            android:id="@+id/mech"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EE"
            android:id="@+id/ee"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECE"
            android:id="@+id/ece"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIVIL"
            android:id="@+id/civil"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MSME"
            android:id="@+id/msme"
            android:textColor="@color/checkedtext"
            app:chipBackgroundColor="@color/checked"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:theme="@style/Theme.MaterialComponents.BottomSheetDialog"
            />
    </com.google.android.material.chip.ChipGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        style="@android:style/Widget.Material.Button.Borderless"
        tools:targetApi="lollipop"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>
</LinearLayout>